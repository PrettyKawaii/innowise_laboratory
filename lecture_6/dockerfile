# 1) getting official lightweight Python image
FROM python:3.11-slim

WORKDIR /app

# 2) installing dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# 3) copying application code
COPY main.py .
COPY models.py .

# 4) initializing database
RUN python -c "from models import Base, engine; Base.metadata.create_all(bind=engine)"

EXPOSE 8000

# 5) starting FastAPI server
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]